pipeline{
    
     tools{
        jdk 'myjava'
        maven 'mymaven'
    }
    agent any
    stages{
        stage('checkout'){
            steps{
               git 'https://github.com/sonal04devops/JavaWebCalculator.git'
            }
        }
         stage('Compile'){
              
              steps{
                  echo 'compiling..'
                  sh 'mvn compile'
	      }
          }
          stage('UnitTest'){
               
              steps{
                  sh 'mvn test'
              }
               post {
               success {
                   junit 'target/surefire-reports/*.xml'
               }
           }	
          }
          stage('Package'){
        
              steps{
                  sh 'mvn package'
              }
          }
         
	stage('Deploy')  {
	 steps{
	 rm -rf mydockerfile
mkdir mydockerfile
cd mydockerfile
cp /var/lib/jenkins/workspace/webtest/target/WebAppCal-0.0.1.war .
touch dockerfile
cat <<EOT>> dockerfile
FROM tomcat
MAINTAINER matrejeur
ADD WebAppCal-0.0.1.war /usr/local/tomcat/webapps
EXPOSE 8080
CMD ["catalina.sh", "run"]

EOT

sudo docker build -t myimage:$BUILD_NUMBER .
sudo docker run -itd -P myimage:$BUILD_NUMBER
	 }
	 }
}
}
